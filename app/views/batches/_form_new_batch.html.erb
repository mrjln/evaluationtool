<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
  <%= form_for @batch do |f| %>

  <div class="form-group">
  <h4>Batch Number</h4>
  <%= f.label :number %>:
  <%= f.text_field :number, class: "form-control", placeholder: "Batch Number" %><br />
</div>

<div class="form-group">
    <h4>Start Date</h4>
  <%= f.label :starts_at %>:
  <%= f.date_field  :starts_at, class: "form-control", placeholder: Date.today %><br />

  </div>

    <%= f.submit "Create Class", class: "btn btn-primary" %>

<% end %>

</div>
</div>

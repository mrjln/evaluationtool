
<hr>
<%= form_for  @evaluation, url: batch_student_evaluations_url(@batch, @student), html: { method: :post } do |f|%>

<div class="form-group">

  <div class="form-group">
      <h4>Date</h4>
    <%= f.label :evaluation_date %>:
    <%= f.date_field  :evaluation_date, class: "form-control" %><br />
    </div>

<div class="form-group">
    <h4>Score</h4>
    <%= f.label :color%>:
    <%= f.select :color, [["red"], ["yellow"], ["green"]] , class: "form_dropdown" %>
</div>

<div class="form-group">
  <%= f.submit 'Add Evaluation', name:"submitformname", class: "btn btn-primary", id:"create-evaluation" %>
  <%= f.submit 'Save and next student', name:"submitformname" , class: 'btn btn-danger',  id:"add-evaluation-and-next"%>
<% end %>
<hr>
</div>

</div>

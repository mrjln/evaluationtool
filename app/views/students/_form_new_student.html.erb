<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
  <%= form_for [@batch, @student] do |f| %>

  <div class="form-group">
  <h4>Student name</h4>
  <%= f.label :name%>:
  <%= f.text_field :name, class: "form-control", placeholder: "Name" %><br />
</div>

    <%= f.submit "Create Student", class: "btn btn-primary" %>
<% end %>

<a href="/batches/<%=@batch.id%>"><button class="btn-primary">Back to Class <%=@batch.number %> </button></a>


</div>
</div>
